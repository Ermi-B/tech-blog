<div class="flex flex-col justify-center items-center mt-16">

    {{#each blog as |bl|}}
    <div class="w-full max-w-3xl bg-white border border-gray-200 rounded-lg shadow mt-8 ">

        <div class="flex flex-col pb-10 pl-8 pt-4">
            <img class="w-24 h-24 mb-3 rounded-full shadow-lg" src="/img/icon.png" alt="Bonnie image" />
            <span class="text-sm text-gray-500 dark:text-gray-400">posted by {{user.name}}</span>
            <a href="/blog/{{id}}"><h5 class="mb-1 text-3xl font-medium text-gray-900">{{title}}</h5></a>
            <p>{{content}}</p>
           
        </div>

    </div>
   
    {{/each}}
   
</div>