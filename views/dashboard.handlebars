
<div class="flex flex-col justify-center items-center mt-16">

    <a href="/dashboard/create"> <button type="button" class="edit-blog mb-8 text-white bg-blue-400 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 shadow-md font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2" data-user-id="{{bl.user_id}}" ><i class="fa-solid fa-plus pr-2 "></i> Create New Post</button></a>
<h2 class="text-3xl font-bold pl-8">My Blogs</h2>

    {{#each blog as |bl|}}
    <div class="w-full max-w-3xl bg-white border border-gray-200 rounded-lg shadow mt-8 ">

        <div class="flex flex-col pb-10 pl-8 pt-4 pb-8">
            <img class="w-24 h-24 mb-3 rounded-full shadow-lg" src="/img/icon.png" alt="Bonnie image" />
            
            <h5 class="mb-1 text-3xl font-medium text-gray-900">{{bl.title}}</h5>
            <p>{{bl.content}}</p>
            <div class="flex justify-center mt-8">
                 <button type="button" class="edit-blog w-1/5 text-white bg-blue-400 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2" data-id="{{bl.id}}" data-user-id="{{bl.user_id}}" >Edit</button>

            <button type="button" class="delete-blog w-1/5 focus:outline-none text-white bg-red-500 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2" data-id="{{bl.id}}" data-user-id="{{bl.user_id}}" >Delete</button>
            </div>
           

        </div>
    </div>
    {{/each}}

</div>
<script src="/js/dashboard.js"></script>